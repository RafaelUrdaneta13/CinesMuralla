extends layout

block content
 
    - if (pelicula)  
        .row
            .col-6
                form(action=`/pelicula/update/${pelicula[0].id_pelicula}` method="POST")
                    .form-group
                        label(for='titulo') 
                        input#titulo.form-control(type='text'  value=`${pelicula[0].titulo}` placeholder='titulo'  name='titulo' required)
                    .form-group
                        label(for='fecha_estreno') 
                        input#fechaestreno.form-control(type='text' value=`${pelicula[0].fecha_estreno}` placeholder='fecha de estreno'  name='fecha_estreno' required)
                    .form-group
                        label(for='descripcion') 
                        input#descripcion.form-control(type='text'  value=`${pelicula[0].descripcion}` placeholder='descripcion'  name='descripcion' required)
                    .form-group
                        label(for='duracion') 
                        input#descripcion.form-control(type='text'  value=`${pelicula[0].duracion}` placeholder='duracion'  name='duracion' required)
                    .form-group
                        label(for='censura') 
                        input#censura.form-control(type='text' value=`${pelicula[0].censura}` placeholder='censura' name='censura' required)
                    button#boton.agregar(type="submit") AGREGAR PEL√çCULA
            .contenedor#contenedor
