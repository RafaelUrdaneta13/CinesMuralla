extends layout

block content

  - if (true) 
    .row
      .col-6
        .nav
          ul
            li
              a#ab(href="#") Salas en mantenimiento 
            li
              a#ab(href="#") Mapa de la sala 
        form(action='/salas/create' method="POST")
          .form-group
            label(for='id_sede') 
            select#id_sede.form-control.seleccions.salaf(type='select' name='id_sede' required).custom-select
                option(value="" selected) SELECCIONAR SEDE
                - for (let i = 0; i < sedes.length; i++)
                  option(value=`${sedes[i].id_sede}`) #{sedes[i].ubicacion}
          .form-group
            label(for='cant_asientos') 
            select#id_tipo.form-control.seleccions(type='select' name='cant_asientos' required).custom-select
                option(value="" selected) SELECCIONAR CANTIDAD DE ASIENTOS
                  option(value=30) 30
                  option(value=40) 40
                  option(value=50) 50
          .form-group
            label(for='id_tipo') 
            select#id_tipo.form-control.seleccions(type='select' name='id_tipo' required).custom-select
                option(value="" selected) SELECCIONAR TIPO DE SALA
                  option(value=1) Normal
                  option(value=2) Premium
          .form-group
            label(for='id_tr') 
            select#id_tipo.form-control.seleccions(type='select' name='id_tr' required).custom-select
                option(value="" selected) SELECCIONAR TIPO DE REPRODUCCION
                  option(value=1) Normal
                  option(value=2) 3D
                  option(value=3) 4D
                  option(value=4) iMax
                  option(value=5) Atmos
          .form-group
            label(for='disponible') 
            select#id_tipo.form-control.seleccions(type='select' name='disponible' required).custom-select
                option(value="" selected) SELECCIONAR DISPONIBILIDAD
                  option(value=1) Disponible
                  option(value=0) No disponible
          button.agregar.bsala(type="submit") AGREGAR SALA
      .contenedor#contenedor
        .col-6
        table#salas
          thead
            tr
              th ID
              th Sede
              th Cantidad de asientos
              th Disponible
              th Tipo de ReproducciÃ³n
              th Tipo de Sala
              th Editar
              th Eliminar
          tbody
          - for (var i = 0; i < salas.length; i++)
            tr
              td #{salas[i].id_sala}
              td #{salas[i].id_sede}
              td #{salas[i].cant_asientos}
              td #{salas[i].disponible}
              td #{salas[i].id_tr}
              td #{salas[i].id_tipo}
              td
                  button#editareliminar(type='submit')
                    i.far.fa-edit.fa-lg
              td 
                  button#editareliminar(type='submit')
                    i.fas.fa-trash-alt.fa-lg

